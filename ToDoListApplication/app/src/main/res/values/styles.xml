<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    List title Text-->
    <style name="ListTitle">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">#000000</item>
    </style>

    <style name="Icone">
        <item name="android:background">#F554BAF9</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="ToDoTitle">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToDoDetails">
        <item name="android:textSize">9dp</item>
    </style>
<!--editor-->

    <style name="ConvertList">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#F570C5F9</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="EditorExplain">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#434242</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
</resources>
