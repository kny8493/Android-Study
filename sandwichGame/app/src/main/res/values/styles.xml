<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">#693F51B5</item>
        <item name="colorAccent">#3F51B5</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/montserrat</item>

        <!-- Customize your theme here. -->
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">#000000</item>
        <item name="material_dialog_message_text_color">#3F51B5</item>
        <item name="material_dialog_positive_button_color">#3F51B5</item>
        <item name="material_dialog_positive_button_text_color">#FFFFFF</item>
        <item name="material_dialog_negative_button_text_color">#3F51B5</item>
    </style>
    <!--    main page-->
    <style name="main_title">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3F51B5</item>
    </style>

    <style name="lank_title">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3F51B5</item>
    </style>

    <style name="main_button_text">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--game page-->
    <style name="game_material_type">
        <item name="android:textColor">#F3F7FF</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="game_material_btn">
        <item name="android:textSize">10dp</item>
    </style>
    <style name="game_material_btn_sauce_text">
        <item name="android:textSize">5dp</item>
    </style>
    <style name="game_table_material_type">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2F2F59</item>
    </style>

    <!-- order title -->
    <style name="game_order_list_header">
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#6495ED</item>
    </style>
    <style name="game_order_list_number">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- menu -->
    <style name="game_menu_header">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3F51B5</item>
    </style>
    <style name="game_menu_detail">
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--list-->
    <style name="list_header">
        <item name="android:gravity">center</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#03A9F4</item>
    </style>

    <!-- game end -->

    <style name="game_end_score">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="game_end_btn_text">
        <item name="android:textSize">11dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="game_end_name_under_line" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#595959</item>
        <item name="colorControlNormal">#979494</item>
    </style>
    <style name="game_end_title">
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
