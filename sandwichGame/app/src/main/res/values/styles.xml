<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--        타이틀 바-->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">#693F51B5</item>
        <item name="colorAccent">#3F51B5</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    main page-->
    <style name="main_title">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3F51B5</item>
    </style>

    <style name="lank_title">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3F51B5</item>
    </style>

    <!--game page-->
    <style name="game_material_type">
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="game_material_btn">
        <item name="android:textSize">10dp</item>
    </style>
    <style name="game_material_btn_sauce_text">
        <item name="android:textSize">4dp</item>
    </style>

    <!-- order title -->
    <style name="game_order_list_header">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3F51B5</item>
    </style>
    <style name="game_order_list_number">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- menu -->
    <style name="game_menu_header">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#3F51B5</item>
    </style>
    <style name="game_menu_detail">
        <item name="android:textSize">7dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--list-->
    <style name="list_header">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4E4E4E</item>
    </style>
</resources>
